{% extends 'base.html.twig' %}

{% block title movie.title|title %}

{% block body %}
    <h1>{{ movie.title }}</h1>

    <hr>

    <section>
        <div>
            {% for genre in movie.genres %}
                <span class="badge bg-primary">{{ genre.name }}</span>
            {% endfor %}
        </div>

        <aside>
            <dl class="row">
                <dt class="col-sm-3">Director</dt>
                <dd class="col-sm-9"></dd>

                <dt class="col-sm-3">Year</dt>
                <dd class="col-sm-9">{{ movie.releasedAt|date('Y') }}</dd>
            </dl>
        </aside>

        <article>
            {{ movie.plot }}
        </article>
    </section>
{% endblock %}

